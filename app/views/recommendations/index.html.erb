<div class="page-header">
  <h1>
    <%= current_user.email %>, below are your recommendations

    <%= current_user.id %>
    <a href="/histories" class="btn btn-lg btn-success">Course History</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Course Number</th>
        <th>Course Name</th>
      </tr>

      <% @recommendations.each do |recommendation| %>
      <tr>

        <td><%= recommendation.course_id %> |
<%= recommendation.user_num %>
        </td>
        <td><%= recommendation.course_name %></td>

      </tr>
      <% end %>
    </table>
  </div>
</div>
