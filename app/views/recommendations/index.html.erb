<div class="page-header">
  <h2>
    <%= current_user.email %>, below are your recommendations
    <a href="/histories" class="btn btn-lg btn-success">View Course History</a>
  </h2>
  <h5>
    <a href="/methodology">
      How were these created?
    </a>
  </h5>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Course Number</th>
        <th>Course Name</th>
        <th>Action</th>
      </tr>

      <% @recommendations.each do |recommendation| %>
      <tr>

        <td><%= recommendation.course_id %> </td>
        <td><%= recommendation.course_name %></td>
        <td> Not Interested?</td>

      </tr>
      <% end %>
    </table>
  </div>
</div>
